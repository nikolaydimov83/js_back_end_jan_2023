<section id="viewhotelDetails">
            <h2>Details</h2>
            <div class="hotel-ticket">
                <div class="hotel-left">
                    <img src="{{hotel.imageUrl}}"
                        alt="">
                </div>
                <div class="hotel-right">
                    <div>
                        <h3>{{hotel.name}}</h3>
                    </div>
                    <div>
                        {{hotel.city}}
                    </div>
                    <p><span >{{hotel.currentFreeRooms}}</span> </p>

                    {{#if isOwner}}
                        <a href="/edit/{{hotel._id}}" class="edit">Edit</a>
                        <a href="/delete/{{hotel._id}}" class="remove">Delete</a>
                    {{else}}
                        {{#if hotel.hasBooked}}
                        <p><span class="green">You already have booked a room</span> </p>
                        {{else}}
                        <a href="/book/{{hotel._id}}" class="book">Book</a>
                        {{/if}}
                    {{/if}}
                    


                </div>

            </div>
        </section>


        <main>
    <div class="container">
        <h1 class="my-4">Title : {{instance.title}}
        </h1>

        <div class="row">

            <div class="col-md-8">
                <img class="img-fluid"
                    src={{instance.imageUrl}}
                    alt="JavaScript" />
            </div>

            <div class="col-md-4 text-center">
                <h4 class="my-3">Duration</h4>
                <p>{{instance.duration}}</p>
                <h3 class="my-3">Description</h3>
                <p>{{instance.description}}</p>
                {{#if isOwner}}
                    <a class="btn btn-danger" href="/delete/{{instance._id}}">Delete</a>
                    <a class="btn btn-warning" href="/edit/{{instance._id}}">Edit</a>
                {{else}}
                    {{#if instance.hasEnrolled}}
                    <span class="enrolled-span">You are already enrolled</span>
                    {{else}}
                    <a class="btn btn-primary" href="/enroll/{{instance._id}}">Enroll</a>
                    {{/if}}
                {{/if}}

                
                

            </div>
        </div>
    </div>
</main>