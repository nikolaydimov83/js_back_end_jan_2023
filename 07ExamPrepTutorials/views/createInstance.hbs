        <main>
            <form class="text-center border border-light p-5" method="post">
                <h1>Create Course</h1>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" placeholder="Course name" name="title" value ="{{#if errors}}{{body.title}}{{/if}}">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" placeholder="Description" name="description">{{#if errors}}{{body.description}}{{/if}}</textarea>
                </div>
                <div class="form-group">
                    <label for="imageUrl">Image url</label>
                    <input type="text" class="form-control" placeholder="Image Url" name="imageUrl" value ="{{#if errors}}{{body.imageUrl}}{{/if}}">
                </div>
                <div class="form-group">
                    <label for="duration">Duration</label>
                    <input type="text" class="form-control" placeholder="4 weeks" name="duration" value ="{{#if errors}}{{body.duration}}{{/if}}">
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </main>