
        <section id="viewAddhotel">
            <h2>Edit existing hotel</h2>
            <form id="formAddhotel" method="post">
                <label for="hotel">Hotel name:</label>
                <input type="text" id="hotel" name="hotel" value ="{{body.name}}">
                <label for="city">City:</label>
                <input type="text" id="city" name="city" value ="{{body.city}}">
                <label for="free-rooms">Free rooms:</label>
                <input type="number" id="free-rooms" name="free-rooms" value ="{{body.freeRooms}}">
                <label for="imgUrl">Image:</label>
                <input type="text" id="imgUrl" name="imgUrl" value ="{{body.imageUrl}}">

                <input type="submit" class="create" value="Add">
            </form>
        </section>




           