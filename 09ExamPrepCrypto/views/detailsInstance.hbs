<main>
<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src={{instance.imageUrl}}>
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{instance.name}}</h1>
            <h3 id="payment">Payment method: {{instance.paymentMethod}}</h3>
            <p id="price"><span>Price: {{instance.price}}</span></p>
            <p id="description">{{instance.description}}</p>
        </div>
        {{#if isLogged}}
            <div class="product-btn">
                {{#if isOwner}}
                <div class="author">
                        <a href="/edit/{{instance._id}}" class="btn-edit">Edit</a>
                        <a href="/delete/{{instance._id}}" class="btn-delete">Delete</a>
                </div>
                {{else}}
                <!-- Logged in user who has not yet buy this crypto-->
                    {{#if instance.hasEnrolled}}
                    <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                <!-- Logged in user who has already buy this crypto-->
                    <a href="/enroll/{{instance._id}}" class="btn-buy">Buy</a>
                
                    {{/if}}
                {{/if}}
        </div>
        {{/if}}
    </div>
</section>
</main>