<section id="create-container">
    <div class="create-container-info">
        <h1>Create Announcement</h1>
        <h4>Post your coins to sell</h4>
        <form method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" value ="{{#if errors}}{{body.name}}{{/if}}">
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" value ="{{#if errors}}{{body.imageUrl}}{{/if}}" placeholder="http://...">
            <label>Price:</label>
            <input type="number" id="price" name="price" value ="{{#if errors}}{{body.price}}{{/if}}" placeholder="31,166.71">
            <label>Description:</label>
            <textarea id="description" name="description"  placeholder="Introduce your coins...">{{#if errors}}{{body.description}}{{/if}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="paymentMethod">
                <option value="crypto-wallet" {{optionSelected "crypto-wallet" body.paymentMethod}}>Crypto Wallet</option>
                <option value="credit-card" {{optionSelected "credit-card" body.paymentMethod}}>Credit Card</option>
                <option value="debit-card" {{optionSelected "debit-card" body.paymentMethod}}>Debit Card</option>
                <option value="paypal" {{optionSelected "paypal" body.paymentMethod}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="TRADE"></input>
        </form>
    </div>
</section>