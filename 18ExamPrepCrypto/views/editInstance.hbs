<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" value={{body.name}}>
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" value={{body.imageUrl}}>
            <label>Price:</label>
            <input type="number" id="price" name="price" value={{body.price}}>
            <label>Description:</label>
            <textarea name="description"
                id="description">{{body.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="paymentMethod" >
                <option value="crypto-wallet" {{optionSelected "crypto-wallet" body.paymentMethod}}>Crypto Wallet</option>
                <option value="credit-card" {{optionSelected "credit-card" body.paymentMethod}}>Credit Card</option>
                <option value="debit-card"{{optionSelected "debit-card" body.paymentMethod}}>Debit Card</option>
                <option value="paypal" {{optionSelected "paypal" body.paymentMethod}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>

           