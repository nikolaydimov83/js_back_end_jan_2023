<section class="details-page">
<h1>Details</h1>
<article class="details-card">

    <article class="details-card-text">
        <h2>Title:<br> {{instance.title}}</h2>
        <h3>Author: {{instance.author}}</h3>
        <h3>Stars: {{instance.stars}}</h3>
        <h3>Genre: {{instance.genre}}</h3>
        <h3>Review: {{instance.review}}
        </h3>

        {{#if isLogged}}
        <!-- If there is no registered user, do not display buttons-->
        <div class="buttons">
            {{#if isOwner}}
                <a href="/edit/{{instance._id}}" class="btn-edit">Edit</a>
                <a href="/delete/{{instance._id}}" class="btn-delete">Delete</a>
            {{else}}
                {{#if instance.hasEnrolled}}
                    <p class="wish-pub">You already added the book to your wish list</p>
                {{else}}
                
                <a href="/enroll/{{instance._id}}" class="btn-wish">Wish to read</a>
                
                {{/if}}
            
            {{/if}}
        </div>
        {{/if}}
    </article>
    
    <article class="details-card-image">
        <img src={{instance.imageUrl}}>
    </article>

</article>
</section>