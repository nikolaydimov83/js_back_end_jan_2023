<section id="create-section" class="">

    <h1 class="item">New Auction</h1>

    <div class="item padded align-center">

        <form class="layout left large" method="post" >

            <div class="col aligned">
                <label>
                    <span>Title</span>
                    <input type="text" name="title" value ="{{#if errors}}{{body.title}}{{/if}}"></label>
                <label>
                    <span>Category</span>
                    <select name="category">
                        <option value="estate" {{optionSelected "estate" body.category}}>Real Estate</option>
                        <option value="vehicles" {{optionSelected "vehicles" body.category}}>Vehicles</option>
                        <option value="furniture" {{optionSelected "furniture" body.category}}>Furniture</option>
                        <option value="electronics" {{optionSelected "electronics" body.category}}>Electronics</option>
                        <option value="other" {{optionSelected "other" body.category}}>Other</option>
                    </select>
                </label>
                <label>
                    <span>Image URL</span>
                    <input type="text" name="imageUrl" value ="{{#if errors}}{{body.imageUrl}}{{/if}}"></label>
                <label>
                    <span>Starting price</span>
                    <input type="number" name="price" value ="{{#if errors}}{{body.price}}{{/if}}"></label>
            </div>

            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description" >{{#if errors}}{{body.description}}{{/if}}</textarea>
                </label>

                <div class="align-center">
                    <input class="action" type="submit" value="Publish Item">
                </div>
            </div>

        </form>

    </div>

</section>