<section id="viewAddhotel">
    <h2>Add new hotel</h2>
    <form id="formAddhotel" method="post">
        <label for="hotel">Hotel name:</label>
        <input type="text" id="hotel" name="name" placeholder="Hotel name" value ="{{#if errors}}{{body.name}}{{/if}}">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" placeholder="City" value ="{{#if errors}}{{body.city}}{{/if}}">
        <label for="free-rooms">Free rooms:</label>
        <input type="number" id="free-rooms" name="availablePieces" placeholder="Free rooms" value ="{{#if errors}}{{body.availablePieces}}{{/if}}">
        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imageUrl" placeholder="https://" value ="{{#if errors}}{{body.imageUrl}}{{/if}}">

        <input type="submit" class="create" value="Add">
    </form>
</section>