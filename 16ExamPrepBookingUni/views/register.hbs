<section id="viewRegister">
    <h2>Create your account:</h2>
    <form id="formRegister" method="post">
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" placeholder="Email" value ="{{#if errors}}{{instance.email}}{{/if}}">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" value ="{{#if errors}}{{instance.username}}{{/if}}" placeholder="Enter your Username">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" placeholder="Password">
        <label for="rePassword">Repeat Password:</label>
        <input type="password" id="rePassword" name="rePassword" placeholder="Repeat Password">
        <input type="submit" class="register" value="Register">
    </form>
</section>
