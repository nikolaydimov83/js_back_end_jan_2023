<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{instance.title}}</h2>
                <h3>Author: {{instance.owner.username}}</h3>
                <h3>Painting technique: {{instance.technique}}</h3>
                <h3>Certificate of authenticity: {{instance.certificate}}</h3>

                <!-- If there is no registered user, do not display buttons-->
                {{#if isLogged}}
                <div class="buttons">
                    {{#if isOwner}}<!-- Only for registered user and author of the publication -->
                    <a href="/edit/{{instance._id}}" class="btn-edit">Edit</a>
                    <a href="/delete/{{instance._id}}" class="btn-delete">Delete</a>
                    {{else}}
                    <!-- logged in user who has not yet shared the publication-->
                    
                    <!-- logged in user who has already shared the publication-->
                        {{#if instance.hasEnrolled}}
                            <p class="shared-pub">You already shared this publication</p>
                        {{else}}
                            <a href="/enroll/{{instance._id}}" class="btn-share">Share publication</a>
                        {{/if}}
                    {{/if}}
                </div>
                {{/if}}
            </article>

            <article class="details-card-image">
                <img src="{{instance.imageUrl}}" alt="art-image2">
            </article>

        </article>
    </section>
</main>