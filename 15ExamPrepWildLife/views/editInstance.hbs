<main>

    <section id="edit-page">
        <div class="editSection">
            <div class="info">
                <h2>Edit your own post!</h2>
            </div>

            <form method="post" class="editForm">
                <h2>Edit Post</h2>
                <ul class="noBullet">
                    <li>
                        <label for="title">Title:</label>
                        <input type="text" class="inputFields" id="title" name="title" value="{{body.title}}" />
                    </li>
                    <li>
                        <label for="key-word">Keyword:</label>
                        <input type="text" class="inputFields" id="keyword" name="keyWord" value="{{body.keyWord}}" />
                    </li>
                    <li>
                        <label for="location">Location:</label>
                        <input type="text" class="inputFields" id="location" name="location" value="{{body.location}}" />
                    </li>
                    <li>
                        <label for="date">Date of creation:</label>
                        <input type="text" class="inputFields" id="date" name="date" value="{{body.date}}" />
                    </li>
                    <li>
                        <label for="image">Wildlife image:</label>
                        <input type="text" class="inputFields" id="image" name="imageUrl" value="{{body.imageUrl}}" />
                    </li>
                    <li>
                        <label for="description">Description:</label>
                        <textarea id="description" class="inputFields" name="description">{{body.description}}</textarea>
                    </li>
                    <li id="center-btn">
                        <button id="edit-btn">Edit</button>
                    </li>
                </ul>
            </form>

        </div>
    </section>

</main>


           