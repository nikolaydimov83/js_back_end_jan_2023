<main>

        <section id="create-page">
            <div class="createSection">
                <div class="info">
                    <h2>Create your post, share information about wildlife.</h2>
                </div>

                <form method="post" class="createForm">
                    <h2>Create Post</h2>
                    <ul class="noBullet">
                        <li>
                            <label for="title">Title:</label>
                            <input type="text" class="inputFields" id="title" placeholder="Two golden snub-nosed monkeys" name="title" value ="{{#if errors}}{{body.title}}{{/if}}" />
                        </li>
                        <li>
                            <label for="key-word">Keyword:</label>
                            <input type="text" class="inputFields" id="keyword" placeholder="Animal" name="keyWord" value ="{{#if errors}}{{body.keyWord}}{{/if}}" />
                        </li>
                        <li>
                            <label for="location">Location:</label>
                            <input type="text" class="inputFields" id="location" placeholder="North America" name="location" value ="{{#if errors}}{{body.location}}{{/if}}" />
                        </li>
                        <li>
                            <label for="date">Date of creation:</label>
                            <input type="text" class="inputFields" id="date" placeholder="18.02.2021" name="date" value ="{{#if errors}}{{body.date}}{{/if}}" />
                        </li>
                        <li>
                            <label for="image">Wildlife image:</label>
                            <input type="text" class="inputFields" id="image" placeholder="http:/..." name="imageUrl" value ="{{#if errors}}{{body.imageUrl}}{{/if}}" />
                        </li>
                        <li>
                            <label for="description">Description:</label>
                            <textarea id="description" class="inputFields" name="description" placeholder="Monkey is...">{{#if errors}}{{body.description}}{{/if}}</textarea>
                        </li>
                        <li id="center-btn">
                            <button id="create-btn">Create</button>
                        </li>
                    </ul>
                </form>

            </div>
        </section>

    </main>