<section class="edit-form-container">

    <form method="post">
        <h3>Edit Book Review</h3>
        <label>Title</label>
        <input type="text" name="title" class="box" value="{{body.title}}" id="">
        <label>Author</label>
        <input type="text" name="author" class="box" value="{{body.author}}" id="">
        <label>Genre</label>
        <input type="text" name="genre" class="box" value="{{body.genre}}" id="">
        <label>Stars</label>
        <input type="number" name="stars" class="box" value="{{body.stars}}" id="">
        <label>Image</label>
        <input type="text" name="imageUrl" class="box" value="{{body.imageUrl}}" id="">
        <label>Review</label>
        <textarea class="box"
            name="review">{{body.review}}</textarea>
        <input type="submit" value="Edit" class="btn">
    </form>
</section>

           