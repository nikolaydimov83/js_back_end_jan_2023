<main>

    <section id="details-page">
        <article class="details-gage-title">
            <h1>Details Page</h1>
        </article>
        <article class="details-page-card">

            <article class="details-page-card-image">
                <!-- Do not forget to change the path to the image -->
                <img src="/static/img/man.png" alt="details-image">
            </article>

            <article class="details-page-card-content">
                <p>Author: {{instance.owner.email}}</p>
                <h2>Headline: {{instance.headline}}</h2>
                <h3>Company name:{{instance.companyName}}</h3>
                <h4>Company description: {{instance.descriptionCompany}}</h4>
                <h5>Location: {{instance.location}}</h5>

                <article class="details-page-card-buttons">
                    {{#if isOwner}}
                    <a href="/edit/{{instance._id}}" class="btn-edit">Edit</a>
                    <a href="/delete/{{instance._id}}" class="btn-delete">Delete</a>
                    <!--only for registered users and author of the ad-->
                    <!---->
                    {{else}}
                    {{#if isLogged}}

                    {{#if instance.hasEnrolled}}
                    <p class="already-applied">You have already applied!</p>
                    {{else}}
                    <a href="/enroll/{{instance._id}}" class="btn-apply">Apply now!</a>
                    <p class="applied-people">Hurry up, {{instance.numberOfEnrolledUsers}} people have already applied.</p>
                    {{/if}}
                    <!--logged in user who did not apply for current ad-->
                    <!--<a href="#" class="btn-apply">Apply now!</a>
                    -->

                    <!--logged in user who has already applied for current ad-->
                    <!--<p class="already-applied">You have already applied!</p>-->
                    {{/if}}
                    {{/if}}
                </article>
            </article>

        </article>
    </section>

    {{#if isOwner}}
    <section id="info-about-candidates">
        <h2>Candidates for this ad:</h2>
        {{#each instance.enrolledUsers}}
            {{>'userCard'}}
        {{/each}}
      
    </section>
    {{/if}}
</main>